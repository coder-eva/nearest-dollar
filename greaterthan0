print('Hello, I can help you round to the nearest dollar.') 
actualAmount = input('How much money do you have?\n$') 

if actualAmount > 0:
	twoDec = str(format(actualAmount, '.2f'))
	rounded = str(int(round(actualAmount)))
	print('$' + twoDec + ' rounds to ' + '$' + rounded +'.00\n' + 'Don\'t spend it all at once!')

else:
	print('Try and stay postive!')
